<Page x:Class="CAPTCHA.PageAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CAPTCHA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuto">

    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center">Авторизация</TextBlock>
            <GroupBox Header="Логин">
                <TextBox Name="tb_login" Text="admin"></TextBox>
            </GroupBox>
            <GroupBox Header="Пароль">
                <PasswordBox Name="pb_password" Password="1234"></PasswordBox>
            </GroupBox>
            <Button Name="bt_auto" Content="Авторизация" Click="bt_auto_Click"></Button>
        
        <StackPanel Name="spCode" Visibility="Collapsed">
            <TextBlock Name="tb_Time"/>
            <Button Name="bt_NewCode" Content="Получить новый код"  Click="bt_NewCode_Click"  Visibility="Collapsed"/>
        </StackPanel>
        </StackPanel>
    </Grid>
</Page>
